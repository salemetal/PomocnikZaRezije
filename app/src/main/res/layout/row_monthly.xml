<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left_rows">
        <TextView
            android:id="@+id/tvMonthlyCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:textSize="@dimen/text_size_cat_mon"
            />
         <TextView
             android:id="@+id/tvMonthlyDatePayed"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="@dimen/text_size_placeno_mon"
             />
        </LinearLayout>
        <TextView
            android:id="@+id/tvMonthlyAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="right"
            android:paddingRight="@dimen/padding_right_rows"
            android:textSize="@dimen/text_size_amount_mon"
            android:layout_gravity="center_vertical"
        />
    </LinearLayout>

</LinearLayout>